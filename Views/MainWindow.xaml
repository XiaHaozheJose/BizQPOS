<Window x:Class="BizQPOS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="主页面" Height="600" Width="800">
    <DockPanel>
        <!-- 菜单栏 -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="文件">
                <MenuItem Header="退出" Command="ApplicationCommands.Close" />
            </MenuItem>
            <MenuItem Header="功能">
                <MenuItem Header="收银" InputGestureText="F1" />
                <MenuItem Header="产品管理" InputGestureText="F2" />
                <MenuItem Header="订单管理" InputGestureText="F3" />
            </MenuItem>
        </Menu>

        <!-- 内容区域 -->
        <Grid>
            <TextBlock Text="欢迎进入主界面！" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
        </Grid>
    </DockPanel>
</Window>
